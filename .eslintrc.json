{
	"extends": ["airbnb", "prettier", "plugin:node/recommended"],
	"plugins": ["prettier"],
	"parserOptions": {
		"sourceType": "module",
		"allowImportExportEverywhere": true
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"endOfLine": "auto"
			}
		],
		"node/no-missing-import": "off",
		"import/no-unresolved": "off",
		"node/no-unsupported-features/es-syntax": "off",
		"no-restricted-syntax": "off",
		"guard-for-in": "off"
	}
}
