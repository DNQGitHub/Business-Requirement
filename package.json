{
	"name": "helpshift-igp-code-repo",
	"version": "1.0.0",
	"scripts": {
		"build": "node tools/scripts/build.js",
		"migrate:latest": "knex --knexfile ./src/infrastructure/knex/configs.ts migrate:latest",
		"migrate:make": "knex --knexfile ./src/infrastructure/knex/configs.ts migrate:make -x ts ",
		"migrate:rollback": "knex --knexfile ./src/infrastructure/knex/configs.ts migrate:rollback",
		"lint": "eslint ./src/**.ts",
		"start": "node -r module-alias/register ./dist",
		"start:dev": "nodemon",
		"deploy": "npm run migrate:latest & npm run start"
	},
	"nodemonConfig": {
		"watch": [
			"src"
		],
		"ext": "ts, html",
		"ignore": [
			"src/public"
		],
		"exec": "node --inspect -r ts-node/register -r tsconfig-paths/register ./src"
	},
	"_moduleAliases": {
		"@presentation": "dist/presentation",
		"@application": "dist/application",
		"@domain": "dist/domain",
		"@infrastructure": "dist/infrastructure"
	},
	"dependencies": {
		"ajv": "^6.12.4",
		"axios": "^0.19.2",
		"bootstrap": "^4.5.0",
		"cookie-parser": "~1.4.4",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"ejs": "^3.1.5",
		"express": "~4.16.1",
		"express-async-errors": "^3.1.1",
		"express-flash": "0.0.2",
		"express-mysql-session": "^2.1.3",
		"express-session": "^1.17.0",
		"find": "^0.3.0",
		"font-awesome": "^4.7.0",
		"fs-extra": "^9.0.1",
		"helmet": "^4.1.0",
		"i18n": "^0.8.4",
		"inversify": "^5.0.1",
		"jasmine": "^3.6.1",
		"jsonfile": "^6.0.1",
		"knex": "^0.20.11",
		"lodash": "^4.17.20",
		"module-alias": "^2.2.2",
		"morgan": "~1.9.1",
		"multer": "^1.4.2",
		"mysql": "^2.17.1",
		"nodemailer": "^6.4.4",
		"nodemon": "^2.0.4",
		"objection": "^2.2.2",
		"reflect-metadata": "^0.1.13",
		"supertest": "^4.0.2",
		"swagger-ui-express": "^4.1.4",
		"ts-node": "^9.0.0",
		"tsconfig-paths": "^3.9.0",
		"tslint": "^6.1.3",
		"typescript": "^4.0.5",
		"urlencode": "^1.1.0",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/command-line-args": "^5.0.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.6",
		"@types/ejs": "^3.0.4",
		"@types/express": "^4.17.6",
		"@types/express-flash": "0.0.2",
		"@types/express-mysql-session": "^2.1.1",
		"@types/express-session": "^1.17.0",
		"@types/find": "^0.2.1",
		"@types/fs-extra": "^9.0.1",
		"@types/helmet": "0.0.48",
		"@types/i18n": "^0.8.7",
		"@types/jasmine": "^3.5.14",
		"@types/jsonfile": "^6.0.0",
		"@types/lodash": "^4.14.161",
		"@types/morgan": "^1.9.1",
		"@types/multer": "^1.4.5",
		"@types/node": "^14.6.3",
		"@types/nodemailer": "^6.4.0",
		"@types/supertest": "^2.0.10",
		"@types/swagger-ui-express": "^4.1.2",
		"@types/urlencode": "^1.1.2",
		"@typescript-eslint/eslint-plugin": "^4.7.0",
		"@typescript-eslint/parser": "^4.7.0",
		"eslint": "^7.13.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-node": "^4.1.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.0.0",
		"prettier": "2.1.2"
	}
}
